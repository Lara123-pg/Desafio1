// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  createdAt DateTime
  updatedAt DateTime @updatedAt
  notes     Note[]
  tokens    Token[]
}

model Note {
  id          String   @id
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  title       String
  description String
  createdAt   DateTime
  updatedAt   DateTime @updatedAt
}

model Token {
  id         String   @id
  userId     String
  expiration DateTime
  createdAt  DateTime
  user       User     @relation(fields: [userId], references: [id])
}
